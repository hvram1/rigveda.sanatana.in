{
  "mandala": 9,
  "sukta": 40,
  "verses": [
    {
      "id": "9.40.1",
      "mandala": 9,
      "sukta": 40,
      "rik": 1,
      "padas": [
        {
          "text": "पु॒ना॒नो अ᳚क्रमीद॒भि विश्वा॒ मृधो॒ विच᳚र्षणिः ।",
          "begin": 0.0,
          "end": 7.679
        },
        {
          "text": "शु॒म्भन्ति॒ विप्रं᳚ धी॒तिभि᳚ः ॥",
          "begin": 7.679,
          "end": 11.04
        }
      ]
    },
    {
      "id": "9.40.2",
      "mandala": 9,
      "sukta": 40,
      "rik": 2,
      "padas": [
        {
          "text": "आ योनि᳚मरु॒णो रु᳚ह॒द्गम॒दिन्द्रं॒ वृषा᳚ सु॒तः ।",
          "begin": 0.0,
          "end": 5.176
        },
        {
          "text": "ध्रु॒वे सद᳚सि सीदति ॥",
          "begin": 5.176,
          "end": 7.16
        }
      ]
    },
    {
      "id": "9.40.3",
      "mandala": 9,
      "sukta": 40,
      "rik": 3,
      "padas": [
        {
          "text": "नू नो᳚ र॒यिं म॒हामि᳚न्दो॒॑स्मभ्यं᳚ सोम वि॒श्वतः᳚ ।",
          "begin": 0.0,
          "end": 6.655
        },
        {
          "text": "आ प᳚वस्व सह॒स्रिण᳚म् ॥",
          "begin": 6.655,
          "end": 9.16
        }
      ]
    },
    {
      "id": "9.40.4",
      "mandala": 9,
      "sukta": 40,
      "rik": 4,
      "padas": [
        {
          "text": "विश्वा᳚ सोम पवमान द्यु॒म्नानी᳚न्द॒वा भ᳚र ।",
          "begin": 0.0,
          "end": 5.198
        },
        {
          "text": "वि॒दाः स᳚ह॒स्रिणी॒रिषः᳚ ॥",
          "begin": 5.198,
          "end": 7.96
        }
      ]
    },
    {
      "id": "9.40.5",
      "mandala": 9,
      "sukta": 40,
      "rik": 5,
      "padas": [
        {
          "text": "स नः᳚ पुना॒न आ भ᳚र र॒यिं स्तो॒त्रे सु॒वीर्य᳚म् ।",
          "begin": 0.0,
          "end": 4.763
        },
        {
          "text": "ज॒रि॒तुर्व᳚र्धया॒ गिरः᳚ ॥",
          "begin": 4.763,
          "end": 7.76
        }
      ]
    },
    {
      "id": "9.40.6",
      "mandala": 9,
      "sukta": 40,
      "rik": 6,
      "padas": [
        {
          "text": "पु॒ना॒न इ᳚न्द॒वा भ᳚र॒ सोम᳚ द्वि॒बर्ह᳚सं र॒यिम् ।",
          "begin": 0.0,
          "end": 6.592
        },
        {
          "text": "वृष᳚न्निन्दो न उ॒क्थ्य᳚म् ॥",
          "begin": 6.592,
          "end": 9.24
        }
      ]
    }
  ]
}