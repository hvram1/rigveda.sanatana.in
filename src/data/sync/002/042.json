  "verses": [
    {
      "id": "2.42.1",
      "mandala": 2,
      "sukta": 42,
      "rik": 1,
      "padas": [
        {
          "text": "कनि᳚क्रदज्ज॒नुषं᳚ प्रब्रुवा॒ण इय᳚र्ति॒ वाच᳚मरि॒तेव॒ नाव᳚म् ।",
          "begin": 0.0,
          "end": 8.476
        },
        {
          "text": "सु॒म॒ङ्गल᳚श्च शकुने॒ भवा᳚सि॒ मा त्वा॒ का चि᳚दभि॒भा विश्व्या᳚ विदत् ॥",
          "begin": 8.476,
          "end": 16.44
        }
      ]
    },
    {
      "id": "2.42.2",
      "mandala": 2,
      "sukta": 42,
      "rik": 2,
      "padas": [
        {
          "text": "मा त्वा᳚ श्ये॒न उद्व᳚धी॒न्मा सु᳚प॒र्णो मा त्वा᳚ विद॒दिषु᳚मान्वी॒रो अस्ता᳚ ।",
          "begin": 0.0,
          "end": 10.487
        },
        {
          "text": "पित्र्या॒मनु᳚ प्र॒दिशं॒ कनि᳚क्रदत्सुम॒ङ्गलो᳚ भद्रवा॒दी व᳚दे॒ह ॥",
          "begin": 10.487,
          "end": 18.08
        }
      ]
    },
    {
      "id": "2.42.3",
      "mandala": 2,
      "sukta": 42,
      "rik": 3,
      "padas": [
        {
          "text": "अव᳚ क्रन्द दक्षिण॒तो गृ॒हाणां᳚ सुम॒ङ्गलो᳚ भद्रवा॒दी श᳚कुन्ते ।",
          "begin": 0.0,
          "end": 9.365
        },
        {
          "text": "मा नः᳚ स्ते॒न ई᳚शत॒ माघशं᳚सो बृ॒हद्व᳚देम वि॒दथे᳚ सु॒वीरा᳚ः ॥",
          "begin": 9.365,
          "end": 19.48
        }
      ]
    }
  ]
}