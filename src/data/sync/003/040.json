{
  "mandala": 3,
  "sukta": 40,
  "verses": [
    {
      "id": "3.40.1",
      "mandala": 3,
      "sukta": 40,
      "rik": 1,
      "padas": [
        {
          "text": "इन्द्र᳚ त्वा वृष॒भं व॒यं सु॒ते सोमे᳚ हवामहे ।",
          "begin": 0.0,
          "end": 6.979
        },
        {
          "text": "स पा᳚हि॒ मध्वो॒ अन्ध᳚सः ॥",
          "begin": 6.979,
          "end": 10.88
        }
      ]
    },
    {
      "id": "3.40.2",
      "mandala": 3,
      "sukta": 40,
      "rik": 2,
      "padas": [
        {
          "text": "इन्द्र᳚ क्रतु॒विदं᳚ सु॒तं सोमं᳚ हर्य पुरुष्टुत ।",
          "begin": 0.0,
          "end": 5.843
        },
        {
          "text": "पिबा वृ᳚षस्व॒ तातृ᳚पिम् ॥",
          "begin": 5.843,
          "end": 9.56
        }
      ]
    },
    {
      "id": "3.40.3",
      "mandala": 3,
      "sukta": 40,
      "rik": 3,
      "padas": [
        {
          "text": "इन्द्र॒ प्र णो᳚ धि॒तावा᳚नं य॒ज्ञं विश्वे᳚भिर्दे॒वेभि᳚ः ।",
          "begin": 0.0,
          "end": 8.444
        },
        {
          "text": "ति॒र स्त᳚वान विश्पते ॥",
          "begin": 8.444,
          "end": 11.2
        }
      ]
    },
    {
      "id": "3.40.4",
      "mandala": 3,
      "sukta": 40,
      "rik": 4,
      "padas": [
        {
          "text": "इन्द्र॒ सोमा᳚ः सु॒ता इ॒मे तव॒ प्र य᳚न्ति सत्पते ।",
          "begin": 0.0,
          "end": 7.44
        },
        {
          "text": "क्षयं᳚ च॒न्द्रास॒ इन्द᳚वः ॥",
          "begin": 7.44,
          "end": 11.12
        }
      ]
    },
    {
      "id": "3.40.5",
      "mandala": 3,
      "sukta": 40,
      "rik": 5,
      "padas": [
        {
          "text": "द॒धि॒ष्वा ज॒ठरे᳚ सु॒तं सोम᳚मिन्द्र॒ वरे᳚ण्यम् ।",
          "begin": 0.0,
          "end": 6.512
        },
        {
          "text": "तव᳚ द्यु॒क्षास॒ इन्द᳚वः ॥",
          "begin": 6.512,
          "end": 9.52
        }
      ]
    },
    {
      "id": "3.40.6",
      "mandala": 3,
      "sukta": 40,
      "rik": 6,
      "padas": [
        {
          "text": "गिर्व᳚णः पा॒हि नः᳚ सु॒तं मधो॒र्धारा᳚भिरज्यसे ।",
          "begin": 0.0,
          "end": 6.91
        },
        {
          "text": "इन्द्र॒ त्वादा᳚त॒मिद्यशः᳚ ॥",
          "begin": 6.91,
          "end": 10.52
        }
      ]
    },
    {
      "id": "3.40.7",
      "mandala": 3,
      "sukta": 40,
      "rik": 7,
      "padas": [
        {
          "text": "अ॒भि द्यु॒म्नानि᳚ व॒निन॒ इन्द्रं᳚ सचन्ते॒ अक्षि᳚ता ।",
          "begin": 0.0,
          "end": 6.063
        },
        {
          "text": "पी॒त्वी सोम᳚स्य वावृधे ॥",
          "begin": 6.063,
          "end": 9.92
        }
      ]
    },
    {
      "id": "3.40.8",
      "mandala": 3,
      "sukta": 40,
      "rik": 8,
      "padas": [
        {
          "text": "अ॒र्वा॒वतो᳚ न॒ आ ग᳚हि परा॒वत᳚श्च वृत्रहन् ।",
          "begin": 0.0,
          "end": 6.214
        },
        {
          "text": "इ॒मा जु᳚षस्व नो॒ गिरः᳚ ॥",
          "begin": 6.214,
          "end": 9.16
        }
      ]
    },
    {
      "id": "3.40.9",
      "mandala": 3,
      "sukta": 40,
      "rik": 9,
      "padas": [
        {
          "text": "यद᳚न्त॒रा प᳚रा॒वत᳚मर्वा॒वतं᳚ च हू॒यसे᳚ ।",
          "begin": 0.0,
          "end": 7.248
        },
        {
          "text": "इन्द्रे॒ह तत॒ आ ग᳚हि ॥",
          "begin": 7.248,
          "end": 11.44
        }
      ]
    }
  ]
}