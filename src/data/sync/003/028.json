{
  "mandala": 3,
  "sukta": 28,
  "verses": [
    {
      "id": "3.28.1",
      "mandala": 3,
      "sukta": 28,
      "rik": 1,
      "padas": [
        {
          "text": "अग्ने᳚ जु॒षस्व᳚ नो ह॒विः पु᳚रो॒ळाशं᳚ जातवेदः ।",
          "begin": 0.0,
          "end": 8.16
        },
        {
          "text": "प्रा॒त॒ःसा॒वे धि᳚यावसो ॥",
          "begin": 8.16,
          "end": 11.52
        }
      ]
    },
    {
      "id": "3.28.2",
      "mandala": 3,
      "sukta": 28,
      "rik": 2,
      "padas": [
        {
          "text": "पु॒रो॒ळा अ᳚ग्ने पच॒तस्तुभ्यं᳚ वा घा॒ परि᳚ष्कृतः ।",
          "begin": 0.0,
          "end": 7.423
        },
        {
          "text": "तं जु᳚षस्व यविष्ठ्य ॥",
          "begin": 7.423,
          "end": 10.12
        }
      ]
    },
    {
      "id": "3.28.3",
      "mandala": 3,
      "sukta": 28,
      "rik": 3,
      "padas": [
        {
          "text": "अग्ने᳚ वी॒हि पु᳚रो॒ळाश॒माहु᳚तं ति॒रोअ᳚ह्न्यम् ।",
          "begin": 0.0,
          "end": 7.464
        },
        {
          "text": "सह᳚सः सू॒नुर᳚स्यध्व॒रे हि॒तः ॥",
          "begin": 7.464,
          "end": 11.36
        }
      ]
    },
    {
      "id": "3.28.4",
      "mandala": 3,
      "sukta": 28,
      "rik": 4,
      "padas": [
        {
          "text": "माध्यं᳚दिने॒ सव᳚ने जातवेदः पुरो॒ळाश᳚मि॒ह क᳚वे जुषस्व ।",
          "begin": 0.0,
          "end": 10.217
        },
        {
          "text": "अग्ने᳚ य॒ह्वस्य॒ तव᳚ भाग॒धेयं॒ न प्र मि᳚नन्ति वि॒दथे᳚षु॒ धीरा᳚ः ॥",
          "begin": 10.217,
          "end": 17.24
        }
      ]
    },
    {
      "id": "3.28.5",
      "mandala": 3,
      "sukta": 28,
      "rik": 5,
      "padas": [
        {
          "text": "अग्ने᳚ तृ॒तीये॒ सव᳚ने॒ हि कानि᳚षः पुरो॒ळाशं᳚ सहसः सून॒वाहु᳚तम् ।",
          "begin": 0.0,
          "end": 8.949
        },
        {
          "text": "अथा᳚ दे॒वेष्व᳚ध्व॒रं वि᳚प॒न्यया॒ धा रत्न᳚वन्तम॒मृते᳚षु॒ जागृ᳚विम् ॥",
          "begin": 8.949,
          "end": 17.4
        }
      ]
    },
    {
      "id": "3.28.6",
      "mandala": 3,
      "sukta": 28,
      "rik": 6,
      "padas": [
        {
          "text": "अग्ने᳚ वृधा॒न आहु᳚तिं पुरो॒ळाशं᳚ जातवेदः ।",
          "begin": 0.0,
          "end": 7.897
        },
        {
          "text": "जु॒षस्व᳚ ति॒रोअ᳚ह्न्यम् ॥",
          "begin": 7.897,
          "end": 12.64
        }
      ]
    }
  ]
}