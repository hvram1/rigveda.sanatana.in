{
  "mandala": 1,
  "sukta": 21,
  "verses": [
    {
      "id": "1.21.1",
      "mandala": 1,
      "sukta": 21,
      "rik": 1,
      "padas": [
        {
          "text": "इ॒हेन्द्रा॒ग्नी उप᳚ ह्वये॒ तयो॒रित्स्तोम᳚मुश्मसि ।",
          "begin": 0.0,
          "end": 9.426
        },
        {
          "text": "ता सोमं᳚ सोम॒पात᳚मा ॥",
          "begin": 9.426,
          "end": 13.8
        }
      ]
    },
    {
      "id": "1.21.2",
      "mandala": 1,
      "sukta": 21,
      "rik": 2,
      "padas": [
        {
          "text": "ता य॒ज्ञेषु॒ प्र शं᳚सतेन्द्रा॒ग्नी शु᳚म्भता नरः ।",
          "begin": 0.0,
          "end": 5.747
        },
        {
          "text": "ता गा᳚य॒त्रेषु᳚ गायत ॥",
          "begin": 5.747,
          "end": 13.16
        }
      ]
    },
    {
      "id": "1.21.3",
      "mandala": 1,
      "sukta": 21,
      "rik": 3,
      "padas": [
        {
          "text": "ता मि॒त्रस्य॒ प्रश᳚स्तय इन्द्रा॒ग्नी ता ह᳚वामहे ।",
          "begin": 0.0,
          "end": 7.79
        },
        {
          "text": "सो॒म॒पा सोम᳚पीतये ॥",
          "begin": 7.79,
          "end": 11.24
        }
      ]
    },
    {
      "id": "1.21.4",
      "mandala": 1,
      "sukta": 21,
      "rik": 4,
      "padas": [
        {
          "text": "उ॒ग्रा सन्ता᳚ हवामह॒ उपे॒दं सव᳚नं सु॒तम् ।",
          "begin": 0.0,
          "end": 7.177
        },
        {
          "text": "इ॒न्द्रा॒ग्नी एह ग᳚च्छताम् ॥",
          "begin": 7.177,
          "end": 12.6
        }
      ]
    },
    {
      "id": "1.21.5",
      "mandala": 1,
      "sukta": 21,
      "rik": 5,
      "padas": [
        {
          "text": "ता म॒हान्ता॒ सद॒स्पती॒ इन्द्रा᳚ग्नी॒ रक्ष᳚ उब्जतम् ।",
          "begin": 0.0,
          "end": 7.733
        },
        {
          "text": "अप्र᳚जाः सन्त्व॒त्रिणः᳚ ॥",
          "begin": 7.733,
          "end": 13.2
        }
      ]
    },
    {
      "id": "1.21.6",
      "mandala": 1,
      "sukta": 21,
      "rik": 6,
      "padas": [
        {
          "text": "तेन᳚ स॒त्येन᳚ जागृत॒मधि᳚ प्रचे॒तुने᳚ प॒दे ।",
          "begin": 0.0,
          "end": 7.685
        },
        {
          "text": "इन्द्रा᳚ग्नी॒ शर्म᳚ यच्छतम् ॥",
          "begin": 7.685,
          "end": 13.2
        }
      ]
    }
  ]
}