<style>
  .docs-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    font-family: 'AdiShilaVedic', serif;
    font-size: 2.5rem;
    color: var(--color-maroon);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .subtitle {
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .doc-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
    border-left: 4px solid var(--color-golden);
  }

  .doc-card h2 {
    font-family: 'AdiShilaVedic', serif;
    color: var(--color-maroon);
    margin-bottom: 0.5rem;
  }

  .doc-link {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-maroon);
    color: white;
    border-radius: 6px;
    text-decoration: none;
    transition: background 0.2s;
  }

  .doc-link:hover {
    background: var(--color-primary);
  }

  .toc {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
  }

  .toc h2 {
    font-family: 'AdiShilaVedic', serif;
    color: var(--color-maroon);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .toc-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .toc-section {
    background: #fafafa;
    padding: 1rem;
    border-radius: 8px;
  }

  .toc-section h3 {
    font-family: 'AdiShilaVedic', serif;
    color: var(--color-golden);
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-golden);
  }

  .toc-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-section li {
    padding: 0.25rem 0;
    font-size: 0.9rem;
    color: var(--color-text);
  }

  .toc-section strong {
    color: var(--color-maroon);
  }

  .screenshots-preview {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .screenshots-preview h2 {
    font-family: 'AdiShilaVedic', serif;
    color: var(--color-maroon);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .screenshot-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .screenshot-grid figure {
    margin: 0;
  }

  .screenshot-grid img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    object-position: top;
    border-radius: 8px;
    border: 1px solid #ddd;
    transition: transform 0.2s;
  }

  .screenshot-grid img:hover {
    transform: scale(1.02);
  }

  .screenshot-grid figcaption {
    text-align: center;
    padding: 0.5rem;
    font-size: 0.85rem;
    color: var(--color-text-light);
  }

  @media (max-width: 768px) {
    .docs-container {
      padding: 1rem;
    }

    h1 {
      font-size: 1.8rem;
    }

    .doc-card, .toc, .screenshots-preview {
      padding: 1rem;
    }
  }
</style>
